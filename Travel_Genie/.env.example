# Travel Genie - Environment Variables Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# Required API Keys
# ============================================

# Anthropic Claude API Key (Required for chat functionality)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# Optional API Keys
# ============================================

# YouTube API Key (Optional - for enhanced video features)
# Get your key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Maps API Key (Optional - for enhanced location services)
# Get your key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenWeather API Key (Optional - for weather forecasts)
# Get your key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ============================================
# Application Configuration
# ============================================

# Debug Mode (true/false)
DEBUG_MODE=false

# Claude Model Selection
# Options: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
CLAUDE_MODEL=claude-3-opus-20240229

# YOLO Device (cpu or cuda)
YOLO_DEVICE=cpu

# ============================================
# Security (Optional)
# ============================================

# Master Key for Encryption (Auto-generated if not provided)
# TRAVEL_GENIE_MASTER_KEY=your_master_key_here

# ============================================
# MCP Server Configuration
# ============================================

# MCP Server Timeout (seconds)
MCP_SERVER_TIMEOUT=10

# Auto-start MCP servers on application start
AUTO_START_MCP_SERVERS=true

# MCP Server Port Configuration
# ============================================

# Transport Type: "stdio" (default) or "sse" (Server-Sent Events/HTTP)
MCP_TRANSPORT=stdio

# Server Hosts (default: localhost)
MCP_ITINERARY_HOST=localhost
MCP_MAPS_HOST=localhost
MCP_BOOKING_HOST=localhost

# Server Ports (default: 8000, 8001, 8002)
MCP_ITINERARY_PORT=8000
MCP_MAPS_PORT=8001
MCP_BOOKING_PORT=8002

# Or use default port start (ports will be 8000, 8001, 8002)
MCP_DEFAULT_PORT_START=8000

# Individual server transport overrides (optional)
# MCP_ITINERARY_TRANSPORT=stdio
# MCP_MAPS_TRANSPORT=stdio
# MCP_BOOKING_TRANSPORT=stdio
