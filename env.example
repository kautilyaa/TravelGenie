# TravelGenie Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# ========================================
# CLAUDE API (Required)
# ========================================
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# ========================================
# TRAVEL APIs (All Free Tier)
# ========================================

# OpenTripMap - Places & Attractions
# Register at: https://opentripmap.io/product
OPENTRIPMAP_KEY=your_opentripmap_key_here

# OpenRouteService - Routing & Directions
# Register at: https://openrouteservice.org/dev/#/signup
OPENROUTESERVICE_KEY=your_openrouteservice_key_here

# Unsplash - Location Images
# Register at: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Eventbrite - Local Events (Optional)
# Register at: https://www.eventbrite.com/platform
EVENTBRITE_TOKEN=your_eventbrite_token_here

# ========================================
# NO API KEY REQUIRED (Free APIs)
# ========================================
# Open-Meteo - Weather (No key needed!)
# ExchangeRate.host - Currency (No key needed!)

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Default: SQLite (no setup required)
DATABASE_URL=sqlite:///./data/travelgenie.db

# For PostgreSQL (optional):
# DATABASE_URL=postgresql://user:password@localhost/travelgenie

# ========================================
# APPLICATION SETTINGS
# ========================================
# Application Environment
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=True              # Set to False in production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1               # Number of worker processes

# API Settings
API_VERSION=v1
API_PREFIX=/api/v1
DOCS_URL=/docs         # FastAPI documentation URL

# ========================================
# MCP (Model Context Protocol) SETTINGS
# ========================================
MCP_SERVER_URL=http://localhost:8001
MCP_TIMEOUT=30         # Request timeout in seconds
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1      # Delay between retries in seconds

# ========================================
# RATE LIMITING
# ========================================
# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60
# Requests per day per IP
RATE_LIMIT_PER_DAY=1000

# ========================================
# CACHING
# ========================================
# Cache backend: memory, redis, or none
CACHE_BACKEND=memory
# Redis URL (if using Redis cache)
REDIS_URL=redis://localhost:6379/0
# Cache TTL in seconds
CACHE_TTL=3600

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO         # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/travelgenie.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ========================================
# SECURITY
# ========================================
# Secret key for JWT tokens (generate a random string)
SECRET_KEY=your-secret-key-change-this-in-production
# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST"]
CORS_ALLOW_HEADERS=["*"]

# ========================================
# OPTIONAL INTEGRATIONS
# ========================================
# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Discord Bot (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Slack Bot (Optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_APP_TOKEN=your_slack_app_token_here

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_CACHE=True
ENABLE_RATE_LIMITING=True
ENABLE_USER_PROFILES=True
ENABLE_TRIP_PLANNING=True
ENABLE_VOICE_INPUT=False
ENABLE_IMAGE_GENERATION=False

# ========================================
# DEFAULT LOCATION (Fallback)
# ========================================
DEFAULT_LATITUDE=48.8566   # Paris
DEFAULT_LONGITUDE=2.3522    # Paris
DEFAULT_RADIUS=5000         # Search radius in meters

# ========================================
# API TIMEOUTS (in seconds)
# ========================================
API_TIMEOUT_OPENTRIPMAP=10
API_TIMEOUT_WEATHER=5
API_TIMEOUT_ROUTING=15
API_TIMEOUT_UNSPLASH=10
API_TIMEOUT_EVENTBRITE=10
API_TIMEOUT_CLAUDE=30
